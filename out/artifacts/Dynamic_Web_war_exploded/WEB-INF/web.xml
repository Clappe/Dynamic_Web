<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <servlet>
        <servlet-name>helloServlet</servlet-name>
        <servlet-class>com.www.servlets.helloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>helloServlet</servlet-name>
        <url-pattern>/helloServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>heroListServlet</servlet-name>
        <servlet-class>com.www.servlets.heroListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>heroListServlet</servlet-name>
        <url-pattern>/listHero</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>addHeroServlet</servlet-name>
        <servlet-class>com.www.servlets.addHeroServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addHeroServlet</servlet-name>
        <url-pattern>/addHero</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ListHeroServlet1</servlet-name>
        <servlet-class>com.www.servlets.heroListServlet1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListHeroServlet1</servlet-name>
        <url-pattern>/listHero1</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>HeroDeleteServlet</servlet-name>
        <servlet-class>com.www.servlets.HeroDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HeroDeleteServlet</servlet-name>
        <url-pattern>/deleteHero</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>heroListServlet2</servlet-name>
        <servlet-class>com.www.servlets.heroListServlet2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>heroListServlet2</servlet-name>
        <url-pattern>/listHero2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HeroEditServlet</servlet-name>
        <servlet-class>com.www.servlets.HeroEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HeroEditServlet</servlet-name>
        <url-pattern>/editHero</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>HeroUpdateServlet</servlet-name>
        <servlet-class>com.www.servlets.HeroUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HeroUpdateServlet</servlet-name>
        <url-pattern>/updateHero</url-pattern>
    </servlet-mapping>
</web-app>